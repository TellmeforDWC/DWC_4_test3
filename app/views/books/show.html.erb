<!--投稿エラーメッセージ-->
<%= render "error_message", book: @book %>
<!--投稿エラーメッセージ-->

<div class="container">
  <div class="row">

    <!--プロフィール&投稿フォーム-->
    <%= render "books/profile_and_form", {book: @book, user: @user} %>
    <!--プロフィール&投稿フォーム-->

    <div class="col-md-8">
      <h3>Book detail</h3>
        <table>
          <thead>
            <tr>
              <td><strong>Author</strong></td>
              <td><strong>Title</strong></td>
              <td><strong>Opinion</strong></td>
              <td><strong></strong></td>
              <td><strong></strong></td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, size:"30x30", fallback:  "/assets/no_image.jpg" %>
                  <p><%= link_to "#{@user.name}", user_path(@user.id) %></p></td>
              <td><%= link_to "#{@books.title}", book_path(@books.id) %></td>
              <td><%= "#{@books.body}" %></td>
              <% if @books.user_id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@books.id) %></td>
              <td> <%= link_to "Destroy", destroy_book_path(@books.id), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>

  </div>
</div>