<div class="container">
  <div class="row">

    <!--プロフィール&投稿フォーム-->
    <%= render "books/profile_and_form", {book: @book, user: @user} %>
    <!--プロフィール&投稿フォーム-->


    <!--投稿一覧-->
    <div class="col-md-8">
    <h3>Books</h3>
      <table>
        <thead>
          <tr>
            <td><strong></strong></td>
            <td><strong>Title</strong></td>
            <td><strong>Opinion</strong></td>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, size:"30x30", fallback:  "/assets/no_image.jpg" %></td>
            <td><%= link_to "#{books.title}", book_path(books.id) %></td>
            <td><%= books.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

 </div>
</div>