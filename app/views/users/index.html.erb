<!--エラーメッセージ-->
<%= render "/books/error_message", book: @book %>
<!--エラーメッセージ-->

<div class="container">
  <div class="row">

    <!--プロフィール&投稿フォーム-->
    <%= render "books/profile_and_form", {book: @book, user: @user} %>
    <!--プロフィール&投稿フォーム-->

    <!--ユーザー一覧-->
    <div class="col-md-8 offset-md-1">
    <h3>Users</h3>
      <table>
        <thead>
          <tr>
            <td><strong>image</strong></td>
            <td><strong>name</strong></td>
            <td><strong></strong></td>
        </thead>
        <tbody>
          <% @users.each do |users| %>
          <tr>
            <td><%= attachment_image_tag users, :profile_image, size:"30x30", fallback:  "/assets/no_image.jpg" %></td>
            <td><%= users.name %></td>
            <td><%= link_to "Show", user_path(users.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>